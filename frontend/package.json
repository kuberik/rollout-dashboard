		"@sveltejs/kit": "^2.36.3",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@types/diff": "^7.0.2",
		"diff": "^7.0.0",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
