		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.38.6",
		"svelte-check": "^4.3.1",
		"svelte-highlight": "^7.8.3",
		"tailwind-variants": "^3.1.0",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@inlang/paraglide-js": "^2.0.0",
